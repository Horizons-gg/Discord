{
    "compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,

		"outDir": "./dist",
		"sourceMap": false,

		"baseUrl": "./src",
		"paths": {
            "@lib/*": ["lib/*"],
            "@app/*": ["app/*"],
            "@api/*": ["api/*"],
            "@interfaces/*": ["interfaces/*"]
        }
	},

    "ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "commonjs"
		}
	},

    "include": [
        "src/**/*.ts",
        "types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}